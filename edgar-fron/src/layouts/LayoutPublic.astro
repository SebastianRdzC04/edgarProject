---
import HeaderPublic from '../components/astro_components/HeaderPublic.astro';
import '../styles/global.css'



interface Props {
    title: string;
}

const { title } = Astro.props

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-[#faf9f5]">
        <HeaderPublic />
        <main class="pt-20 relative z-0"> <!-- Aumentado el padding-top para dar mÃ¡s espacio al header fijo -->
		    <slot />
        </main>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
